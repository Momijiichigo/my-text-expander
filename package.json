{
  "name": "my-text-expander",
  "version": "1.0.0",
  "description": "Personal text expansion Chrome extension",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && ./scripts/post-build.sh",
    "build:watch": "vite build --watch & while inotifywait -e modify dist/src/; do ./scripts/post-build.sh; done",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "create-icons": "echo 'Open assets/create-icons.html in your browser to generate icon files'"
  },
  "keywords": [
    "chrome-extension",
    "text-expansion",
    "productivity",
    "solidjs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "solid-js": "^1.8.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@types/chrome": "^0.0.250",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^5.0.0",
    "vite-plugin-solid": "^2.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/my-text-expander.git"
  }
}
